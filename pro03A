sentence=input("Enter the sentence:")
wordlist=sentence.split(" ")
print("This sentence has",len(wordlist),"words")
digcnt=upcnt=locnt=0
for ch in sentence:
    if '0'<=ch<='9':
        digcnt+=1
    elif 'A'<=ch<='Z':
        upcnt+=1
    elif 'a'<=ch<='z':
        locnt+=1
        
print("This sentence has",digcnt,"Digits",upcnt,"upper case letter",locnt,"lower case letter")
